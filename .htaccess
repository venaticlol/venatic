# Enable Rewrite Engine
RewriteEngine On

# Remove .html extension from URLs
# If the request is for a file that exists, don't rewrite
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Remove .html extension if present in URL
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)\.html$ /$1 [R=301,L]

# Add .html extension internally if file exists
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Handle index/home page
RewriteRule ^$ home.html [L]
RewriteRule ^index$ home.html [L]
RewriteRule ^home$ home.html [L]

# Specific page mappings
RewriteRule ^documentation$ documentation.html [L]
RewriteRule ^terms$ terms.html [L]
RewriteRule ^privacy$ privacy.html [L]
RewriteRule ^admin$ admin.html [L]
RewriteRule ^blacklist$ blacklist.html [L]

# Prevent direct access to .html files (optional - redirects to clean URLs)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

